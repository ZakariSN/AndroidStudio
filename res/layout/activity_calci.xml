<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calci">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cal"
        android:background="#AFB42B"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textAlignment="center"
        android:text="My Application"/>

    <TextView
        android:id="@+id/cal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:height="50dp"
        android:hint="CALCULATOR"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:height="50dp"
        android:hint="Display"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cal"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/idclear"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:text="CLEAR"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="#6c25be"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/idbackspace"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:text="BACKSPACE"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="#6c25be"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintLeft_toRightOf="@id/idclear"
        android:layout_margin="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id7"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:text="7"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="#6c25be"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idclear"
        android:layout_margin="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id8"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_marginStart="28dp"
        android:background="#6c25be"
        android:text="8"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/id7"
        app:layout_constraintTop_toBottomOf="@id/idclear" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id9"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="40dp"
        android:background="#6c25be"
        android:text="9"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/id8"
        app:layout_constraintTop_toBottomOf="@id/idclear" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/idplus"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="40dp"
        android:background="#6c25be"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/id9"
        app:layout_constraintTop_toBottomOf="@id/idclear" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id4"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="40dp"
        android:background="#6c25be"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id7" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id5"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="40dp"
        android:background="#6c25be"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/id4"
        app:layout_constraintTop_toBottomOf="@id/id8" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id6"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="40dp"
        android:background="#6c25be"
        android:text="6"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/id5"
        app:layout_constraintTop_toBottomOf="@id/id9" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/idmul"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="40dp"
        android:background="#6c25be"
        android:text="*"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/id6"
        app:layout_constraintTop_toBottomOf="@id/idplus" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id1"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="40dp"
        android:background="#6c25be"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id4"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id2"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="40dp"
        android:background="#6c25be"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/id1"
        app:layout_constraintTop_toBottomOf="@id/id5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id3"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="40dp"
        android:background="#6c25be"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/id2"
        app:layout_constraintTop_toBottomOf="@id/id6" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/idminus"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="40dp"
        android:background="#6c25be"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/id3"
        app:layout_constraintTop_toBottomOf="@id/idmul" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/iddot"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="40dp"
        android:background="#6c25be"
        android:text="."
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id1" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/idzero"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="40dp"
        android:background="#6c25be"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/iddot"
        app:layout_constraintTop_toBottomOf="@id/id2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/idequal"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="40dp"
        android:background="#6c25be"
        android:text="="
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/idzero"
        app:layout_constraintTop_toBottomOf="@id/id3"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/iddiv"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="40dp"
        android:background="#6c25be"
        android:text="/"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/idequal"
        app:layout_constraintTop_toBottomOf="@id/idminus"/>

</androidx.constraintlayout.widget.ConstraintLayout>